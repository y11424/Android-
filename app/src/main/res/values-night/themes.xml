<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dlt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors for dark theme -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        
        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        
        <!-- Window background for dark theme -->
        <item name="android:windowBackground">#121212</item>
    </style>
</resources>